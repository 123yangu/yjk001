<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_yeehealth_main"
    android:orientation="vertical" >

    <include layout="@layout/layout_title" />

    <View
        style="@style/view_down_line"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/et_oldpwd"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textSize="18dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:hint="@string/str_oldpwd"
        android:inputType="textPassword"
        android:textColor="@color/color_gray" />

    <View style="@style/view_down_line" />

    <EditText
        android:id="@+id/et_newpwd"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textSize="18dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:hint="@string/str_newpwd"
        android:inputType="textPassword"
        android:textColor="@color/color_gray" />

    <View style="@style/view_down_line" />

    <EditText
        android:id="@+id/et_newpwd_again"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textSize="18dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:hint="@string/str_pwdagain"
        android:inputType="textPassword"
        android:textColor="@color/color_gray" />

    <View style="@style/view_down_line" />

    <Button
        android:id="@+id/btn_finish_changepwd"
        style="@style/btn"
        android:layout_marginTop="100dp"
        android:text="@string/str_finish" />

</LinearLayout>
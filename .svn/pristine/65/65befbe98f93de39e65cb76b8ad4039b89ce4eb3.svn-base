<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="35dp" >

    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/btn"
        android:text="@string/str_login"
        android:textColor="@color/color_login_text"
        android:textSize="22dip" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="50dip"
        >
        <ImageView
            android:id="@+id/qq_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/qq" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dip" >
        
        
        <View
            android:id="@+id/tween_line"
            android:layout_width="2dip"
            android:layout_height="18dip"
            android:layout_centerInParent="true"
            android:background="#8BF2E4" />

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tween_line"
            android:paddingRight="10dip"
            android:text="注册账号"
            android:textColor="@color/color_login_text"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/tv_forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tween_line"
            android:paddingLeft="10dip"
            android:text="@string/str_forget_password"
            android:textColor="@color/color_login_text"
            android:textSize="18dp" />
    </RelativeLayout>

</LinearLayout>
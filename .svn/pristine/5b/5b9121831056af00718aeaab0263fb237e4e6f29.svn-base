<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:layout_marginTop="35dp"
    android:orientation="vertical" >

    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/btn"
        android:text="@string/str_login"
        android:textColor="@color/color_login_text"
        android:textSize="22dip" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dip"
        android:layout_marginBottom="10dip"
        android:src="@drawable/qq" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dip"
        android:gravity="center"
        android:paddingRight="10dip" >

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册账号"
            android:textColor="@color/color_login_text"
            android:textSize="22dp" />

        <View
            android:id="@+id/tween_line"
            android:layout_width="2dip"
            android:layout_height="20dip"
            android:layout_toRightOf="@id/tv_register"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dip"
            android:background="#8BF2E4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_forget_password"
            android:textColor="@color/color_login_text"
            android:layout_toRightOf="@id/tween_line"
            android:textSize="22dp" />
    </RelativeLayout>

</LinearLayout>
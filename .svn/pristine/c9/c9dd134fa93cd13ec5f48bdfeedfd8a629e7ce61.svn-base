	public static boolean validatePassword(String password) {
		if (StringUtils.isEmpty(password)) {
			return false;
		}
		Pattern p = Pattern.compile("^[a-zA-Z0-9!@#$%^&*()_+-=]{6,16}$");
		Matcher m = p.matcher(password);
		return m.find();
	}

